<table class="source_code">
  <tr>
    <td class="lines">
      <pre><%= "\n\n\n" %><%= h format_lines(object) %></pre>
    </td>
    <td class="code">
      <pre><span class="info file"># File '<%= h object.file %>'<% if object.line %>, line <%= object.line %><% end %></span><%= "\n\n" %><%= html_syntax_highlight object.source %></pre>
    </td>
  </tr>
</table>
