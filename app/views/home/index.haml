%div{'ng-controller' => 'ReposController'}
  = link_to 'Sync repos', sync_repos_path
  %ul
    %li{'ng-repeat' => 'repo in repos'}
      %span.name
        {{repo.name}}
      %span.toggle{'ng-hide' => 'repo.active'}
        %a{'href' => '', 'ng-click' => 'activate(repo)'}
          activate
      %span.toggle{'ng-show' => 'repo.active'}
        %a{'href' => '', 'ng-click' => 'deactivate(repo)'}
          deactivate
